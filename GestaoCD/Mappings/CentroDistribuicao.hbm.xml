<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
        namespace="GestaoCD.Models"
        assembly="GestaoCD">

    <class name="CentroDistribuicao" lazy="false" table="centros_distribuicao">
        <id name="Id" column="id" type="long">
            <generator class="sequence">
                <param name="sequence">centro_dist_seq</param>
            </generator>
        </id>

        <property name="Nome" type="string" length="50" not-null="true" />
        <property name="Endereco" type="string" length="100" unique="true"/>
        <property name="Cidade" type="string" length="50" not-null="true"  />
        <property name="Uf"	type="string" length="2" not-null="true" />
        <property name="Cep" type="string" length="9" not-null="true" />

        <many-to-one name="Usuario"
                     column="usuario_id"
                     fetch="join"
                     foreign-key="fk_cd_usuario" />

    </class>

</hibernate-mapping>